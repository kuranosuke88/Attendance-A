<% provide(:class_text, 'basic-info') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【残業申請】</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
         <table class="table table-bordered table-condensed" id="table-attendances">
            <thead>
              <tr>
                <th>日付</th>
                <th>曜日</th>
                <th>終了予定時間</th>
                <th>翌日</th>
                <th>業務処理内容</th>
                <th>指示者確認㊞</th>
              </tr>
            </thead>
            
            <tbody>
               <tr>
                <td class><%= l(@day, format: :short) %></td>
                <td>
                <% if @day.wday == 1 %>
                  <%= $days_of_the_week[@day.wday] %>
                <% end %>
                <% if @day.wday == 2 %>
                  <%= $days_of_the_week[@day.wday] %>
                <% end %>
                <% if @day.wday == 3 %>
                  <%= $days_of_the_week[@day.wday] %>
                <% end %>
                <% if @day.wday == 4 %>
                  <%= $days_of_the_week[@day.wday] %>
                <% end %>
                <% if @day.wday == 5 %>
                  <%= $days_of_the_week[@day.wday] %>
                <% end %>
                <% if @day.wday == 6 %>
                  <font color="blue"><%= $days_of_the_week[@day.wday] %></font>
                <% end %>
                <% if @day.wday == 0 %>
                  <font color="red"><%= $days_of_the_week[@day.wday] %></font>
                <% end %>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
               </tr>
            </tbody>
         </table>
            <div class="center">
              <button type="button" class="btn btn-primary btn-<%= yield(:class_text) %>">残業申請</button>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
             </div>
        </div>
      </div>
    </div>
  </div>
</div>