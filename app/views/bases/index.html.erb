<% provide(:title, '拠点一覧') %>

<h1>拠点一覧</h1>

<table class="table-bordered table-condensed" id="bases-info">
  <thead>
    <tr>
      <th colspan="3"></th>
      <th colspan="3"></th>
      <th colspan="2">拠点番号</th>
      <th colspan="2">拠点名</th>
      <th colspan="2">勤怠種類</th>
    </tr>
  </thead>
  <thead>
  <% @bases.each do |base| %>
      <tr>
        <th colspan="3"><%= link_to "修正", edit_basis_path(base), class: "btn btn-primary" %></th>
        <th colspan="3">
          <%= link_to "削除", base, method: :delete,
              data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %>
        </th>
        <td colspan="2"><%= base.base_number %></td>
        <td colspan="2"><%= base.base_name %></td>
        <td colspan="2"><%= base.attendance_type %></td>
      </tr>
  <% end %>
  </thead>
</table>

<div class="add-base-information-btn">
  <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-primary" %>
</div>
