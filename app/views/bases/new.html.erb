<% provide(:title, '拠点情報追加') %>
<% provide(:class_text, 'signup') %>
<% provide(:button_text, '拠点追加') %>
<h1>拠点情報登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @base, local: true) do |f| %>
      <%= render 'shared/error_messages_base' %>
    
      <%= f.label :base_number, "拠点番号", class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_number, class: "form-control" %>
      
      <%= f.label :base_name, "拠点名", class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label :attendance_type, "勤怠種類", class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :attendance_type, class: "form-control" %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>