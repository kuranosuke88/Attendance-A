<% provide(:title, '出勤中社員一覧') %>

<h1>出勤中社員一覧</h1>

<table class="table-bordered table-condensed" id="bases-info">
  <thead>
    <tr>
      <th colspan="2">社員番号</th>
      <th colspan="2">社員名</th>
    </tr>
  </thead>
  <thead>
  <% @users.each do |user| %>
    <% user.attendances.each do |attendance| %>
      <tr>
        <% if Date.current == attendance.worked_on && attendance.finished_at.nil? %>
          <td colspan="2"><%= user.user_employee_number %></td>
          <td colspan="2"><%= user.name %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
  </thead>
</table>